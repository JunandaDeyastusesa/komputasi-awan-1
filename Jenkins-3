pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Build') {
            steps {
                sh 'composer install'
                sh 'phpunit'
            }
        }
        stage('Docker Build') {
            steps {
                docker.build("your-image-name:${env.BUILD_NUMBER}")
            }
        }
        stage('Docker Push') {
            steps {
                docker.withRegistry('https://index.docker.io') {
                    docker.image("your-image-name:${env.BUILD_NUMBER}").push()
                }
            }
        }
    }
}
