pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git branch: 'WDC-V2', url: 'https://github.com/JunandaDeyastusesa/komputasi-awan-1.git'
      }
    }
    stage('Build') {
      steps {
        sh 'composer install'
        sh 'phpunit'
      }
    }
    stage('Run Image') {
      steps {
        docker.run(
          image: 'dashboard-mec-php-env:latest',
          ports: ['9000:80'],
          workingDir: '/var/www/html'
        )
      }
    }
  }
}
