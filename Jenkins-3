pipeline {
agent any
environment {
    MYSQL_HOST = 'mysql_db'
    MYSQL_USER = 'mec'
    MYSQL_PASSWORD = 'root'
    MYSQL_DB = 'db_bimbelonline'
}

stages {
    stage('Checkout') {
        steps {
            git branch: 'WDC-V2', url: 'https://github.com/JunandaDeyastusesa/komputasi-awan-1.git'
        }
    }
    
    stage('Set Up Docker Compose') {
        steps {
            script {
                // Menarik image yang diperlukan oleh docker-compose (jika belum ada)
                sh 'docker-compose pull'

                // Membangun dan menjalankan container menggunakan docker-compose
                sh 'docker-compose up -d'

                echo 'MySQL is running with Docker Compose'
            }
        }
    }
    
    stage('Verify MySQL') {
        steps {
            script {
                // Verifikasi jika MySQL sudah berjalan
                sh 'docker-compose ps'

                echo 'Verification of MySQL container'
            }
        }
    }
}
}
