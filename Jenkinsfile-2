pipeline {
    agent any
    environment {
        // Environment variables for database
        MYSQL_ROOT_PASSWORD = 'root'
        MYSQL_DATABASE = 'db_bimbelonline'
        MYSQL_USER = 'mec'
        MYSQL_PASSWORD = 'root'
    }
    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'WDC-V2', url: 'https://github.com/JunandaDeyastusesa/komputasi-awan-1.git'
            }
        }
        stage('Run MySQL Container') {
            steps {
                script {
                    sh '''
                        docker run -d --name mysql_db \
                        -e MYSQL_ROOT_PASSWORD=$MYSQL_ROOT_PASSWORD \
                        -e MYSQL_DATABASE=$MYSQL_DATABASE \
                        -e MYSQL_USER=$MYSQL_USER \
                        -e MYSQL_PASSWORD=$MYSQL_PASSWORD \
                        -v db_data:/var/lib/mysql \
                        junandad/mysql:8.0
                    '''
                }
            }
        }
        stage('Run PHP Container') {
            steps {
                script {
                    sh '''
                        docker run -d --name php_app \
                        --link mysql_db:mysql \
                        -p 8083:80 \
                        -e MYSQL_HOST=mysql_db \
                        -e MYSQL_USER=$MYSQL_USER \
                        -e MYSQL_PASSWORD=$MYSQL_PASSWORD \
                        -e MYSQL_DB=$MYSQL_DATABASE \
                        junandad/dashboard-mec-php:try
                    '''
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline berhasil dijalankan.'
        }
        failure {
            echo 'Pipeline gagal. Silakan periksa log untuk lebih detail.'
        }
    }
}
