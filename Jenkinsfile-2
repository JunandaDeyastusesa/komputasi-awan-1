pipeline {
    agent any

    environment {
        CONTAINER_NAME = "dashboard-mec"
        IMAGE_NAME = "dashboard-mec-php-env"
        NGROK_AUTH_TOKEN = credentials('2mvZEbgvDec3nHj9wYVIg2p4A0g_6kLEx9P6JELgETyokwaD') // Simpan token ngrok di Jenkins Credentials
        LOCAL_PORT = "8080" // Ganti port sesuai aplikasi Anda
    }

    stages {
        stage('Cleanup Existing Container') {
            steps {
                script {
                    // Hentikan dan hapus container jika sudah ada
                    sh """
                    if [ \$(docker ps -q -f name=${CONTAINER_NAME}) ]; then
                        echo "Stopping existing container..."
                        docker stop ${CONTAINER_NAME}
                        docker rm ${CONTAINER_NAME}
                    fi
                    """
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Jalankan container dari image
                    sh """
                    echo "Starting Docker container ${CONTAINER_NAME}..."
                    docker run -d --name ${CONTAINER_NAME} -p ${LOCAL_PORT}:${LOCAL_PORT} ${IMAGE_NAME}
                    """
                }
            }
        }

        stage('Setup ngrok') {
            steps {
                script {
                    // Install ngrok jika belum ada
                    sh """
                    if ! [ -x "$(command -v ngrok)" ]; then
                        echo "Downloading ngrok..."
                        curl -sSL https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip -o ngrok.zip
                        unzip ngrok.zip
                        chmod +x ngrok
                        sudo mv ngrok /usr/local/bin
                    fi
                    """
                }
            }
        }

        stage('Run ngrok') {
            steps {
                script {
                    // Autentikasi ngrok dan forward port
                    sh """
                    echo "Configuring ngrok..."
                    ngrok config add-authtoken ${NGROK_AUTH_TOKEN}
                    
                    echo "Starting ngrok on port ${LOCAL_PORT}..."
                    nohup ngrok http ${LOCAL_PORT} > ngrok.log &
                    sleep 5

                    echo "Fetching ngrok public URL..."
                    NGROK_URL=\$(curl -s http://localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url')
                    echo "Ngrok URL: \$NGROK_URL"

                    echo "NGROK_URL=\$NGROK_URL" > ngrok_url.txt
                    """
                }
            }
        }

        stage('Display ngrok URL') {
            steps {
                script {
                    // Tampilkan URL ngrok di console Jenkins
                    sh 'cat ngrok_url.txt'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
    }
}
