pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'dashboard-mec-php-env'
        CONTAINER_NAME = 'dashboard-mec'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checkout kode proyek...'
                checkout scm
            }
        }

        stage('Run Docker Container') {
            steps {
                echo 'Menjalankan container Docker...'
                sh '''
                docker rm -f ${CONTAINER_NAME} || true
                docker run --name ${CONTAINER_NAME} -d ${DOCKER_IMAGE}
                '''
            }
        }

        stage('Show Build Logs') {
            steps {
                echo 'Menampilkan log build secara real-time dari container...'
                sh "docker logs -f ${CONTAINER_NAME}"
            }
        }
    }

    post {
        always {
            echo 'Membersihkan container...'
            sh 'docker rm -f ${CONTAINER_NAME} || true'
        }
    }
}
